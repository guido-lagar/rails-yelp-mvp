<h1>My Restaurants</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
    <li><%= link_to restaurant.name, restaurant_path(restaurant) %> - <%= link_to "Delete", restaurant_path(restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </li>
  <% end %>
</ul>

<p><%= link_to "Create a new restaurant", new_restaurant_path %></p>
